{
  "name": "EasyU",
  "description": "All in one easy access to essential open university site features",
  "version": "1.3.0",
  "manifest_version": 3,
  "icons": {
    "16": "/icons/easyicon_16.png",
    "32": "/icons/easyicon_32.png",
    "48": "/icons/easyicon_48.png",
    "128": "/icons/easyicon_small.png"
  },
  "action": {
    "default_popup": "/html/page.html",
    "default_icon": "/icons/easyicon.png"
  },
  "host_permissions": [
    "https://opal.openu.ac.il/*",
    "https://sheilta.apps.openu.ac.il/*",
    "https://*.openu.ac.il/*"
  ],
  "background": {
    "service_worker": "/scripts/notificationsHandler.js",
    "scripts": ["/scripts/notificationsHandler.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://sso.apps.openu.ac.il/*"],
      "js": ["/scripts/content.js"],
      "all_frames": true
    },
    {
      "matches": ["https://sheilta.apps.openu.ac.il/pls/dmyopt2/LUACH_SHANA*"],
      "js": ["/scripts/calendar.js"]
    },
    {
      "matches": ["https://sheilta.apps.openu.ac.il/pls/dmyopt2/course_info.courses*"],
      "js": ["/scripts/courseFilter.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/css/styleCalendar.css","icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ]
}
